<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.talend.cxf-examples.jaxrs-intro-example</groupId>
    <artifactId>jaxrs-intro-service-bundle</artifactId>
    <name>Intro JAX-RS Example REST Resource Bundle</name>
    <packaging>bundle</packaging>

    <parent>
        <groupId>org.talend.cxf-examples.jaxrs-intro-example</groupId>
        <artifactId>jaxrs-intro-example</artifactId>
        <version>1.0</version>
        <relativePath>..</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.talend.cxf-examples.jaxrs-intro-example</groupId>
            <artifactId>jaxrs-intro-common</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Require-Bundle>jaxrs-intro-common</Require-Bundle>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>

